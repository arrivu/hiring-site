<% define_content :link do %>
  <%= HostUrl.protocol %>://<%= HostUrl.context_host(asset.course) %>/<%= asset.course.class.to_s.downcase.pluralize %>/<%= asset.course_id %>
<% end %>

<% define_content :subject do %>
  <%= t :subject, "Project Enrollment" %>
<% end %>

<%=
    case asset.type
    when 'TeacherEnrollment'
      t :body_teacher, "You've been enrollment in the project, %{course}, as a Hiring Manager.", :course => asset.course.name
    when 'TaEnrollment'
      t :body_ta, "You've been enrolled in the project, %{course}, as a interviewer.", :course => asset.course.name
    when 'ObserverEnrollment'
      t :body_observer, "You've been enrolled in the project, %{course}, as an HR.", :course => asset.course.name
    when 'DesignerEnrollment'
      t :body_designer, "You've been enrolled in the project, %{course}, as a designer.", :course => asset.course.name
    else
      t :body_student, "You've been enrolled in the project, %{course}, as a candidate.", :course => asset.course.name
    end
%>
