<%=
    case asset.type
    when 'TeacherEnrollment'
      t :body_teacher, "You've been enrolled in the project as a hiring manager."
    when 'TaEnrollment'
      t :body_ta, "You've been enrolled in the project as a interviewer."
    when 'ObserverEnrollment'
      t :body_observer, "You've been enrolled in the project as an HR."
    when 'DesignerEnrollment'
      t :body_designer, "You've been enrolled in the project as a designer."
    else
      t :body_student, "You've been enrolled in the project as a candidate."
    end
%>
<% email = asset.user.email; login = (asset.user.pseudonym.unique_id rescue "none") %>
<%= before_label :name, "Name" %> <%= asset.user.name %>
<%= before_label :email, "Email" %> <%= asset.user.email %>
<% if email != login %><%= before_label :username, "Username" %> <%= asset.user.pseudonym.unique_id rescue t(:none, "none") %><% end %>

<%= t :details, "More info at %{url}", :url => HostUrl.context_host(asset.course) %>
