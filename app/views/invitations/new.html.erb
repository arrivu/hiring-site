      <tr><td><%= f.label :address, "Address" %></td>
        <td colspan="5"><%= f.text_area :address, size: "24x2" %></td></tr>
      <tr>
        <td><%= f.label :city, "City" %></td><td><%= f.text_field :city%></td>
        <td><%= f.label :state, "State" %></td><td><%= f.text_field :state%></td>
        <td><%= f.label :zip_code, "Zip code" %></td><td><%= f.text_field :zip_code%></td>
      </tr>
    </table>



