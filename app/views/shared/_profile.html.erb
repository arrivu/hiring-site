<%
  jammit_css :profile_show, :tinymce
  js_bundle :profile_show
  @body_classes << 'not-editing'
  js_env PROFILE: @user_data
  js_env(folder_id: @user.profile_pics_folder.id) if @user == @current_user
%>
<%= form_tag update_profile_profile_path, { :method => :put, :id => :edit_profile_form, :class => "bootstrap-form form-vertical" } do %>
  <div class="image-block">
    <div class="image-block-image profile-avatar-wrapper">
      <% if @user_data[:can_edit] %>
        <a href="#" class="profile-link">
          <%= avatar_image @user_data[:id], 128 %>
          <i class="icon-edit"></i>
        </a>
      <% else %>
        <%= avatar_image @user_data[:id], 128 %>
      <% end %>
    </div>
    <div class="image-block-content row-fluid">
      <h1 class="h1">
        <span class="hide-if-editing">
<<<<<<< HEAD
          <table><tr><td>First Name:</td><td><%= @user_data[:short_name] %></td></tr>
=======
          <table><tr><td>First Name:</td><td><%= @user_data[:name] %></td></tr>
>>>>>>> question_tag_add
            <tr><td>Last Name:</td><td><%= @user[:last_name] %></td></tr></table></span>
      </h1>
      <% if @user_data[:can_edit] %>
        <label class="show-if-editing"><%= t('name', 'Name') %>: <br><input type="text" name="user[short_name]" value="<%= @user_data[:short_name] %>" required></label>
      <% end %>
      <p>
        <span class="hide-if-editing"><%= @user_data[:title] %></span>
        <% if @user_data[:can_edit] %>
          <label class="show-if-editing"><%= t('title', 'Title') %>: <br><input type="text" name="user_profile[title]" value="<%= @user_data[:title] %>"></label>
        <% end %>
      </p>
      <div class="show-if-editing edit-contact-methods">
        <h2 class="h5 border border-b"><%= t('#profile.ways_to_contact_me', "Ways to contact me") %></h2>
        <% if @user_data[:user_services].present? %>
          <div class="row-fluid">
            <div class="">
              <ul class="social-links">
                <!--<li>-->
                  <!--<label for="social_message" class="social message" title="<%#= t :message_title, 'Message' %>" data-tooltip><%#= t :message_me, 'message me in Sublime' %></label>-->
                <!--</li>-->
                <% @user_data[:user_services].each do |s| %>
                  <li>
                    <% service_name = s[:service_name] || s[:service].to_s.titleize %>
                    <label for="social_<%= s[:service] %>" class="social <%= s[:service] %>" title="<%= service_name %>" data-tooltip><%= t :service_contact, 'contact %{user} with %{service}', :user => @user_data[:short_name], :service => service_name %></label>
                    <input type="hidden" value="0" name="user_services[<%= s[:service] %>">
                    <%= check_box_tag "user_services[#{s[:service]}]", 1, s[:visible], :id => "social_#{s[:service]}" %>
                  </li>
                <% end %>
              </ul>
            </div>
            <div class="social-instructions">
              <p>
                <%= t(:social_instructions, "Check the contact methods you'd like to be visible to others on your profile.") %><br>
                <%= link_to(t(:manage_settings, "Manage Registered Services"), settings_profile_path)  %>
              </p>
            </div>
          </div>
        <% else %>
          <p><%= t('#profile.you_have_no_services', "You haven't registered any services, you can add some on the *settings* page.", :name => @user_data[:short_name], :wrapper => link_to('\1', settings_profile_path)) %></p>
        <% end %>
      </div>
      <div class="hide-if-editing">
        <h2 class="h5 border border-b"><%= t :ways_to_contact_user, "Ways to contact %{name}", :name => @user_data[:short_name] %></h2>
        <ul class="social-links">
          <% if current_user_is_account_admin %>
            <!--<li><a href="<%#= message_user_path(@user) %>" class="social message" title="<%#= t :message_title, 'Message' %>" data-tooltip><%#= t :message_user_canvas, 'Message %{user} in Sublime', :user => @user_data[:short_name] %></a></li>-->
          <% end %>
          <% if @user_data[:user_services].present? && @user.show_user_services %>
            <% @user_data[:user_services].select{|s| s[:visible] }.each do |s| %>
              <% service_name = s[:service_name] || s[:service].to_s.titleize %>
              <li><a href="<%= s[:service_user_link] %>" class="social <%= s[:service] %>" title="<%= service_name %>" data-tooltip><%= t :service_contact, 'contact %{user} with %{service}', :user => @user_data[:short_name], :service => service_name %></a></li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <div class="v-gutter">
    <h2 class="h1 border border-b"><%= t :bio, "Bio" %></h2>
    <% if @user_data[:bio] %>
      <div class="hide-if-editing"><%= raw format_message(@user_data[:bio]).first %></div>
    <% else %>
      <p class="hide-if-editing"><%= t('user_has_no_bio', "%{user} hasn't added a bio", :user => @user_data[:short_name]) %></p>
    <% end %>
    <% if @user_data[:can_edit] %>
      <div class="show-if-editing">
        <textarea id="profile_bio" name="user_profile[bio]"><%= @user_data[:bio] %></textarea>
      </div>
    <% end %>
  </div>

  <div class="row-fluid v-gutter">
    <% if @user != @current_user %>
      <div class=" hide-if-editing">
        <h2 class="h1 border border-b"><%= t :know_this_person_as, "You Know This Person as a..." %></h2>
        <% if @user_data[:common_contexts] %>
          <ul>
            <% @user_data[:common_contexts].each do |context| %>
              <li><%= context[:roles].join(', ') %> in <a href="<%= context[:html_url] %>"><%= context[:name] %></a></li>
            <% end %>
          </ul>
        <% else %>
          <p><%= t('nothing_in_common', "You don't have anything in common") %></p>
        <% end %>
      </div>
    <% end %>

    <div class="profile_links">
      <h2 class="h1 border border-b"><%= t :links, "Links" %></h2>
      <div class="hide-if-editing">
        <% if @user_data[:links].length > 0 %>
          <ul>
            <% @user_data[:links].each do |link| %>
              <li><a href="<%= add_uri_scheme_name(link[:url]) %>"><%= link[:title] %></a></li>
            <% end %>
          </ul>
        <% else %>
          <p><%= t  :no_links, "%{name} hasn't added any links", :name => @user_data[:short_name] %></p>
        <% end %>
      </div>

      <% if @user_data[:can_edit] %>
        <div class="show-if-editing">
          <table id="edit_links_table">
            <thead>
              <th><%= t :links_title, 'Title' %></th>
              <th></th>
              <th><%= t :links_url, 'URL' %></th>
            </thead>
            <tbody id="profile_link_fields"></tbody>
          </table>
          <button data-event="addLinkField" class="btn btn-small"><%= t :add_link_field, "Add another link" %></button>
        </div>
      <% end %>
    </div>


    <!-- Start Arrivu Hiring-->

        <div class="profile_links">
          <h2 class="h1 border border-b">Academic Qualifications (Please mention in chronological order)</h2>

          <div class="hide-if-editing">
            <% if @user_data[:common_academic].length > 0 %>
                <table id="edit_links_table" cellpadding="10" >
                  <thead>
                  <th>Degree</th>
                  <th>Discipline</th>
                  <th>School/ College</th>
                  <th>Year of Completion</th>
                  <th>%/ CGPA</th>
                  <th></th>
                  </thead>


                  <% @user_data[:common_academic].each do |link| %>
                      <tr>
                        <input type="hidden" name="link_ids[]" value=<%= link.id.to_i %>>
                        <td><input type="text" name="link_degrees[]" value="<%= link.degree %>"></td>
                        <td><input type="text" name="link_disciplines[]" value="<%= link.discipline %>"></td>
                        <td><input type="text" name="link_colleges[]" value="<%= link.college %>"></td>
                        <td><input type="text" name="link_year_of_completions[]" value="<%= link.year_of_completion %>"></td>
                        <td><input type="text" name="link_percentages[]" value="<%= link.percentage %>"></td>
                      </tr>
                  <% end %>

                </table>

            <% else %>
                <p><%= t  :no_links, "%{name} hasn't added  Academic Qualifications", :name => @user_data[:short_name] %></p>
            <% end %>
          </div>

            <% if @user_data[:can_edit] %>
            <div class="show-if-editing">
                <table id="edit_links_table" cellpadding="10" >

                  <thead>
                  <th>Degree</th>
                  <th>Discipline</th>
                  <th>School/ College</th>
                  <th>Year of Completion</th>
                  <th>%/ CGPA</th>
                  <th></th>
                  </thead>


                  <tbody id="qual_fields">
                  <% @user_data[:common_academic].each do |link| %>
                      <tr>
                        <input type="hidden" name="link_ids[]" value=<%= link.id.to_i %>>
                        <td><input type="text" name="link_degrees[]" value="<%= link.degree %>"></td>
                        <td><input type="text" name="link_disciplines[]" value="<%= link.discipline %>"></td>
                        <td><input type="text" name="link_colleges[]" value="<%= link.college %>"></td>
                        <td><input type="text" name="link_year_of_completions[]" value="<%= link.year_of_completion %>"></td>
                        <td><input type="text" name="link_percentages[]" value="<%= link.percentage %>"></td>
                        <td><a href="#" data-event="removeLinkRow"><i class="icon-end"></i></a></td>
                      </tr>
                  <% end %>
                  </tbody>
                </table>
            <button data-event="addQualField" class="btn btn-small" style="margin-left:10px;margin-bottom: 10px;">Add another Qualification</button>
            <br/>
          </div>
          <br/>
        <% end %>
        </div>
    <!--</div>-->

    <!--ENd Arrivu Hiring-->



    <!--Start Arrivu Hiring 1 -->

    <div class="profile_links">
      <h2 class="h1 border border-b">Employment Details (Please mention in chronological order)</h2>


      <div class="hide-if-editing">
        <% if @user_data[:common_employment].length > 0 %>
            <table id="edit_links_table" cellpadding="10" >
              <thead>
              <th>Organization</th>
              <th>From(MM/YYYY)</th>
              <th>To(MM/YYYY)</th>
              <th>Designation</th>
              <th>Permanent/ contract</th>
              <th>Reason for leaving</th>
              <th></th>
              </thead>

              <% @user_data[:common_employment].each do |emp| %>
                  <tr>
                    <input type="hidden" name="link_experience_ids[]" value="<%= emp.id %>">
                    <td><input type="text" name="link_organizations[]" value="<%= emp.organization %>"></td>
                    <td><input type="text" name="link_from_dates[]" value="<%= emp.from_date %>"></td>
                    <td><input type="text" name="link_end_dates[]" value="<%= emp.end_date %>"></td>
                    <td><input type="text" name="link_designations[]" value="<%= emp.designation %>"></td>
                    <td><input type="text" name="link_permanents[]" value="<%= emp.permanent %>"></td>
                    <td><input type="text" name="link_reason_for_leaving[]" value="<%= emp.reason_for_leaving %>"></td>
                  </tr>
              <% end %>
            </table>

        <% else %>
            <p><%= t  :no_links, "%{name} hasn't added  Employment details", :name => @user_data[:short_name] %></p>
        <% end %>
      </div>


      <% if @user_data[:can_edit] %>
          <div class="show-if-editing">
            <table id="edit_links_table" cellpadding="10" >

              <thead>
              <th>Organization</th>
              <th>From(MM/YYYY)</th>
              <th>To(MM/YYYY)</th>
              <th>Designation</th>
              <th>Permanent/ contract</th>
              <th>Reason for leaving</th>
              <th></th>
              </thead>


              <tbody id="work_fields">
              <% @user_data[:common_employment].each do |emp| %>
                  <tr>
                    <input type="hidden" name="link_experience_ids[]" value="<%= emp.id %>">
                    <td><input type="text" name="link_organizations[]" value="<%= emp.organization %>"></td>
                    <td><input type="text" name="link_from_dates[]" value="<%= emp.from_date %>"></td>
                    <td><input type="text" name="link_end_dates[]" value="<%= emp.end_date %>"></td>
                    <td><input type="text" name="link_designations[]" value="<%= emp.designation %>"></td>
                    <td><input type="text" name="link_permanents[]" value="<%= emp.permanent %>"></td>
                    <td><input type="text" name="link_reason_for_leaving[]" value="<%= emp.reason_for_leaving %>"></td>
                    <td><a href="#" data-event="removeLinkRow"><i class="icon-end"></i></a></td>
                  </tr>
              <% end %>
              </tbody>
            </table>
            <button data-event="addWorkField" class="btn btn-small" style="margin-left:10px;margin-bottom: 10px;">Add another Experience</button>
            <br/>
          </div>
          <br/>
      <% end %>
    </div>
    <!--</div>-->

    <!--End Arrivu Hiring 1-->


    <% if @user_data[:can_edit] %>
      <div class="form-actions no-margin-bottom show-if-editing">
        <button data-event="cancelEditProfile" class="btn"><%= t('cancel', 'Cancel') %></button>
        <button class="btn btn-primary"><%= t('save_profile', 'Save Profile') %></button>
      </div>
    <% end %>
  </div>
<% end %>

