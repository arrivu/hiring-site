<% add_crumb t('#crumbs.confirmation', "Confirmation") %>
<% content_for :page_title, t('titles.confirm', 'Confirm Action') %>

<% content_for :page_header do %>
  <h1><%= t('headings.confirm', %{Confirm Action}) %></h1>
<% end %>

<div style="margin: 10px auto; width: 600px;">
  <% if params[:event] == "delete" %>
    <h2><%= t('headings.confirm_delete', %{Confirm Project Deletion}) %></h2>
    <%= t 'details.confirm_delete', %{Are you sure you want to delete this project? Once it is deleted, candidate and hiring manager will no longer have access to it. If you just want to remove it from the project drop-down menu, you should *conclude the project instead*.}, :wrapper => link_to('\1', context_url(@context, :context_confirm_action_url, :event => 'conclude')) %>
    <%= t 'details.confirm_delete_addendum', %{If you do not have permission to conclude the project, you can *change the project end date*, or ask your administrator to conclude the project. }, :wrapper => link_to('\1', course_settings_url(@context)) %>
    <%= form_tag context_url(@context, :context_url), {:method => :delete} do %>
      <input type="hidden" name="event" value="delete"/>
      <div class="form-actions">
        <a href="<%= context_url(@context, :context_url) %>" class="btn"><%= t('#buttons.cancel', %{Cancel}) %></a>
        <button class="btn btn-danger" type="submit"><%= t('buttons.delete_course', %{Delete Project}) %></button>
      </div>
    <% end %>
  <% else %>
    <h2><%= t('headings.confirm_conclude', %{Confirm Conclude Project}) %></h2>
    <p><%= t 'details.confirm_conclude', %{Warning: Concluding the project will prevent you from modifying grades and accessing project content.} %></p>
    <p><%= t 'details.conclude_alt_text', %{If you would like to retain the ability to change results while limiting candidate access to the project, please utilize the project dates settings. You can learn about project date settings in our guides *here*}, :wrapper => link_to('\1', "http://guides.arrivuapps.com/m/4152/l/57088-how-do-i-change-the-start-and-end-dates-for-my-course") %></p>

    <%= form_tag context_url(@context, :context_url), {:method => :delete} do %>
      <input type="hidden" name="event" value="conclude"/>
      <div class="form-actions">
        <a href="<%= context_url(@context, :context_url) %>" class="btn"><%= t('#buttons.cancel', %{Cancel}) %></a>
        <button class="btn btn-primary" type="submit"><%= t('buttons.conclude_course', %{Conclude Project}) %></button>
      </div>
    <% end %>

  <% end %>
</div>
